<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_form_inherit_jev_plu" model="ir.ui.view">
        <field name="name">product.product.form.inherit.jev.plu</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="uom_po_id" position="after">
                <field name="plu"/>
            </field>                      
        </field>
    </record>
    <record id="product_variant_easy_edit_view_inherit_jev_plu" model="ir.ui.view">
        <field name="name">product.variant.easy.edit.view.inherit.jev.plu</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="lst_price" position="after">
                <field name="plu" string="PLU code" readonly="1"/>
            </field>                      
        </field>
    </record>
</odoo>