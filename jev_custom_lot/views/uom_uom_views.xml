        <field name="name">product.uom.form.view.inherit.sold.per.seed</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view"/>
        <field name="arch" type="xml">
            <field name="rounding" position="after">
                <field name="is_seeds"/>
            </field>
        </field>
    </record>
    <record id="product_uom_tree_view_inherit_sold_per_seed" model="ir.ui.view">
        <field name="name">product.uom.tree.view.inherit.sold.per.seed</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_tree_view"/>
        <field name="arch" type="xml">
            <field name="uom_type" position="after">
                <field name="is_seeds"/>
            </field>
        </field>
    </record>

</odoo>
