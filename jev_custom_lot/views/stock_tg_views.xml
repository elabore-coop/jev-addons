<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_tg_view_search" model="ir.ui.view">
        <field name="name">stock.tg.view.search</field>
        <field name="model">stock.tg</field>
        <field name="arch" type="xml">
            <search string="Taux de germination">
                <field name="lot_id" string="Lot associé"/>
                <field name="tg" string="Taux de germination"/>
                <field name="tg_date" string="Date du test"/>
                <field name="product_id" string="Produit"/>
            </search>
        </field>
    </record>
    <record id="stock_tg_view_form" model="ir.ui.view">
        <field name="name">stock.tg.view.form</field>
        <field name="model">stock.tg</field>
        <field name="arch" type="xml">
            <form string="Taux de germination">
                <group>
                    <field name="tg" string="Taux de germination"/>
                    <field name="tg_date" string="Date du test"/>
                    <field name="lot_id" string="Lot associé" required="1"/>
                </group>
            </form>
        </field>
    </record>
    <record id="stock_tg_view_tree" model="ir.ui.view">
        <field name="name">stock.tg.view.tree</field>
        <field name="model">stock.tg</field>
        <field name="arch" type="xml">
            <tree string="Taux de germination">
                <field name="tg" string="Taux de germination"/>
                <field name="tg_date" string="Date du test"/>
                <field name="lot_id" string="Lot"/>
                <field name="product_id" string="Produit" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="stock_tg_action" model="ir.actions.act_window">
        <field name="name">Taux de germination</field>
        <field name="res_model">stock.tg</field>
        <field name="context">{'search_default_active': True}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
      id="menu_stock_tg"
      action="stock_tg_action"
      parent="stock.menu_stock_inventory_control"
    />
</odoo>
