<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_lot_form_tmg_inherit" model="ir.ui.view">
        <field name="name">view.production.lot.form.tmg.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="pmg"/>
                <field name="pmg_date" widget="date"/>
                <field name="is_seeds" invisible="1"/>
                <field name="weight" readonly="1" attrs="{'invisible': [('is_seeds', '=', False)]}"/>
            </field>
            <xpath expr="//page[@name='description']" position="after">
                <page string="Taux de Germination" name="tg_ids">
                    <field name="tg_ids">
                        <tree>
                            <field name="tg" string="Taux de germination"/>
                            <field name="tg_date" string="Date"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
